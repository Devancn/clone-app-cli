#! /usr/bin/env node
const program = require('commander')
const chalk = require('chalk')
const { logo, version } = require('../util')
const { add, list, init, remove } = require('../command')
program
  .version(version(), '-v, --version')
  .usage('<command> [options]')
program
  .command('add')
  .description('add a new template')
  .action((...args) => {
    add(...args)
  })

program
  .command('list')
  .description('view template name list')
  .action((...args) => {
    list(...args)
  })

program
  .command('init')
  .description('initial project from template')
  .action((...args) => {
    init(...args)
  })

program
  .command('remove')
  .description('remove a template')
  .action((...args) => {
    remove(...args)
  })

program
  .arguments('<command>')
  .action(name => {
    program.outputHelp()
    console.log()
    console.log(`  ` + chalk.red(`Unknown command ${chalk.yellow(name)}.`))
    console.log()
  })
program.parse(process.argv)

if (!process.argv.slice(2).length) {
  program.outputHelp()
  logo()
}
